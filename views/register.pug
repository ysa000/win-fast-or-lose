extends layout.pug

block registerForm
	.col-md-12.register
		//- if (message.length > 0)
		//- 	<div class="alert alert-danger">message</div>
		form.form-inline(action='/register', method='post', accept-charset='utf-8')
			h2 Registration
			br
			.form-group
				label Username
				br
				input.form-control(type='test', name='username', placeholder='Your funky username')
			br
			br
			.form-group
				label Password
				br
				input.form-control(type='password', name='password', placeholder='Be tricky')
			br
			br
			.form-group
				label Repeat password
				br
				input.form-control(type='password', name='password_check', placeholder='Be tricky one more time')
			br
			br
			input.btn.btn-lg.btn-success(type='submit')

